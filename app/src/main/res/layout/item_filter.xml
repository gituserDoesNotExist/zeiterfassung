<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
            android:id="@+id/linear_layout_filter_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners"
            android:padding="10dip">

        <LinearLayout
                android:id="@+id/linear_layout_filter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dip"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/filter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_size_item_filter"
                    tools:text="some-filter" />

            <TextView
                    android:id="@+id/filter_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    tools:text="some-value" />
        </LinearLayout>

        <ImageView
                android:id="@+id/element_remove_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorOnBackgroundDisabled"
                android:layout_gravity="center"
                android:src="@drawable/ic_cancel_black_24dp" />


    </LinearLayout>

</FrameLayout>